{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "outDir": "dist",
    "declaration": true,
    "newLine": "LF",
    "allowJs": true,
    "strict": true,
    "experimentalDecorators": true
  },

  "include": [ "./*.ts", "./*.js", "./utils/*.ts" ],
  "exclude": [ "node_modules", "web-test-runner.config.js" ]
}
